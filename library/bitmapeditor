           (MenuItemWidth (IPLUS (STRINGWIDTH "-1,-1" EditBitmapMenuFont)
                                 20))
           (MenuItemHeight (IPLUS (FONTHEIGHT EditBitmapMenuFont)
                                  20))
           (MatrixMenu (create MENU
                              ITEMS _ (for Position in Positions
                                         collect (LIST (CONCAT (CAR Position)
                                                              ","
                                                              (CDR Position))
