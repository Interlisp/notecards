           (Window (CREATEW (CREATEREGION (CAR Position)
                                   (IDIFFERENCE (CDR Position)
                                          (HEIGHTIFWINDOW 20))
                                   (fetch IMAGEWIDTH of Menu)
                                   (HEIGHTIFWINDOW 22))
                          NIL 4 T)))
          (DRAWLINE 5 11 (IDIFFERENCE (fetch IMAGEWIDTH of Menu)
                                5)
                 11 2 'PAINT Window NIL Dashing)
