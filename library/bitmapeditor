                        (RESETSAVE (CURSOR (if Block?
                                               then T
                                             else WAITINGCURSOR)))
                        (if Block?
                            then (SPAWN.MOUSE))
                        (EditBitmapMessage Window "This may take a LONG time!")
                        (APPLY* Function (WINDOWPROP Window 'Bitmap)
                               Block?])

