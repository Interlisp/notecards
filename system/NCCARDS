    (LET (NoteFile)
         (if (AND (SETQ NoteFile (NC.NoteFileFromNoteFileUID NoteFileUID))
                  (NC.CardFromUID CardUID NoteFile))
           else (create Card
                       UID _ CardUID
                       NoteFile _ NoteFileUID)))))(NC.CardP
