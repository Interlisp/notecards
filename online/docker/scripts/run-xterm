#!/bin/bash
#set -x
if [ $# -gt 0 ]; then
	width=$1
else
	width=1024
fi

if [ $# -gt 1 ]; then
	height=$2
else
	height=808
fi
export SSHPORT=2${PORT}
/usr/sbin/sshd -e -p ${SSHPORT}
su nc <<EOF
#set -x
/usr/bin/websockify --daemon ${PORT} localhost:1${PORT}
/usr/bin/Xvnc -geometry ${width}x${height} -rfbport 1${PORT} -nolisten tcp -localhost -nevershared -dontdisconnect :0 &
export DISPLAY=:0
for i in {1..10}
    do
        xdpyinfo > /dev/null
        if [ $? -eq 0 ]; 
            then
                break
            else
                sleep 1
        fi
    done
twm&
(echo ".         Files are now available by SFTP to notecards.online using port 2${PORT}.  Username is 'nc'.  Password is 'notecards'" | xmessage -file - -geometry ${width}x66+5+0) &
export TMOUT=3600
/usr/bin/xterm -geometry 168x55+5+60
EOF

